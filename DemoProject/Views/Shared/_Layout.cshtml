@{
    var theme_color = "#222222"; /* Đen : #222222, Xanh Da Trời : #428bca, Chàm: #328aa4*/
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/Content/images/favicons/favicon-cloud.ico" type="image/x-icon" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Custom-Style-Black.css" rel="stylesheet" />
    <link href="~/Content/js/jquery/plugins/bxslider/jquery.bxslider.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Content/js/common.js"></script>
    <script src="~/Content/js/jquery/plugins/bxslider/jquery.bxslider.min.js"></script>

    <style>
        th
        {
	        background: @theme_color;
            /*background: #328aa4 url(/Content/tr_back.gif) repeat-x;*/
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:@theme_color;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/@HttpContext.Current.Application["APP_CONTROLLER"]/Index">@HttpContext.Current.Application["APP_NAME"]</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Học sinh", "index", "hocsinh")</li>
                    <li>@Html.ActionLink("Giáo viên", "index", "giaovien")</li>
                    <li>@Html.ActionLink("Giảng dạy", "index", "giangday")</li>  
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["USER_SESSION"] != null)
                    {
                        var usersession = Session["USER_SESSION"] as DemoProject.Sessions.UserSession;
                        <li class="dropdown profile"><a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Xin chào @usersession.username!</a>
                            <ul class="dropdown-menu">
                                @if (usersession.MaQuyen == 1)
                                {
                                    <li>@Html.ActionLink("Tạo tài khoản", "Create", "Home")</li>
                                }
                                    
                                <li>@Html.ActionLink("Sửa mật khẩu", "EditPass", "Home")</li>
                                <li>@Html.ActionLink("Đăng xuất", "Logout", "Home")</li>
                            </ul>        

                        </li>

                        
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="color:@theme_color;">
            <p>&copy; @DateTime.Now.Year - @HttpContext.Current.Application["STUDENT_NAME"] @HttpContext.Current.Application["STUDENT_ROLL_NUMBER"]</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
